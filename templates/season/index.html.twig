{% extends 'base.html.twig' %}

{% block title %}Season index{% endblock %}
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
        {{ encore_entry_link_tags('program') }}
        {{ encore_entry_link_tags('programAdmin') }}
    {% endblock %}

{% block body %}
        <h1 class="mt-3">Toutes les saisons</h1>
    <div class="d-flex justify-content-center">
        <a class="btn btn-outline-primary col-5" href="{{ path('season_new') }}">Ajouter une série</a>
    </div>
    <div class="row col-12 d-flex justify-content-around">
        {% for season in seasons %}

            <div class="col-md-3 m-3 p-0  d-flex flex-column">
                <div class=" card d-flex program-card flex-row">
                    <figure class="col-4 p-0 ">
                        <img class="h-100 col-12 p-0" src="{{ season.program.poster }}" alt="Card image cap">
                    </figure>
                    <div class="card-body overflow-auto">
                        <h4 class="card-title">{{ season.program.title }} - saison {{ season.number }} </h4>
                        <p class="card-text">Année de production: {{ season.year }}</p>
                        <p class="card-text ">{{ season.description }}</p>
                    </div>
                </div>

                <div class="d-flex justify-content-around">
                    <a class="btn btn-outline-primary col-5" href="{{ path('season_show', {'id': season.id}) }}">Voir</a>
                    <a class="btn btn-outline-primary col-5" href="{{ path('season_edit', {'id': season.id}) }}">Modifier</a>
                </div>
            </div>
        {% else %}
            Aucune saison trouvée.
        {% endfor %}
    </div>

{% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}