{{ form_start(form, {'attr': {'class': 'offset-2 col-8'}}) }}
<div class="d-flex flex-row justify-content-around">
    <div class="d-flex flex-column col-4">
        <div class="d-flex flex-column">
            {{ form_label(form.program, 'Série associée') }}
            {{ form_widget(form.program) }}
            {% for error in form.program.vars.errors %}
                <p class="text-danger">{{ error.message }}</p>
            {% endfor %}
        </div>
        <div class="d-flex flex-column">
            {{ form_label(form.number, 'Numéro de la saison') }}
            {{ form_widget(form.number) }}
            {% for error in form.number.vars.errors %}
                <p class="text-danger">{{ error.message }}</p>
            {% endfor %}
        </div>
        <div class="d-flex flex-column">
            {{ form_label(form.year, 'Année de production') }}
            {{ form_widget(form.year) }}
            {% for error in form.year.vars.errors %}
                <p class="text-danger">{{ error.message }}</p>
            {% endfor %}
        </div>
    </div>

    <div class="d-flex flex-column col-7">
        {{ form_label(form.description, 'Description de la série') }}
        {{ form_widget(form.description, {'attr': {'cols': '30','class': 'h-100'}}) }}
        {% for error in form.description.vars.errors %}
            <p class="text-danger">{{ error.message }}</p>
        {% endfor %}
    </div>
</div>



<div class="d-flex justify-content-around">
    <button class="btn btn-outline-primary col-7">{{ button_label|default('Enregistrer') }}</button>
</div>
{{ form_end(form) }}
    {% if app.request.attributes.get('_route') is same as('season_edit') %}
        {{ include('season/_delete_form.html.twig') }}
    {% endif %}