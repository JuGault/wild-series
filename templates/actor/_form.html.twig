{{ form_start(form, {'attr': {'class': 'offset-2 col-8'}}) }}
<div class="d-flex flex-row justify-content-around">
    <div class="d-flex flex-column col-4">
        <div class="d-flex flex-column">
            {{ form_label(form.name, 'Nom de l\'acteur') }}
            {{ form_widget(form.name) }}
        </div>
        <div class="d-flex flex-column">
            {{ form_label(form.programs, 'Series de l\'acteur') }}
            {{ form_widget(form.programs) }}
        </div>
        <div class="d-flex flex-column">
            {{ form_label(form.birthday, 'Anniversaire de l\'acteur') }}
            {{ form_widget(form.birthday) }}
        </div>
        <div class="d-flex flex-column">
            {{ form_label(form.pictureFile, 'Photo de l\'acteur') }}
            {{ form_widget(form.pictureFile) }}
        </div>
    </div>
</div>


<div class="d-flex justify-content-around">
    <button class="btn btn-outline-primary col-7">{{ button_label|default('Enregistrer') }}</button>

</div>

{{ form_end(form) }}
