<form class="d-flex justify-content-center" method="post" action="{{ path('episode_delete', {'slug': episode.slug}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ episode.id) }}">
    <button class="btn btn-outline-primary col-5">Supprimer</button>
</form>
